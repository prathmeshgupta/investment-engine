# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/investment_engine
REDIS_URL=redis://localhost:6379/0

# API Keys for Market Data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
IEX_CLOUD_API_KEY=your-iex-cloud-key
POLYGON_API_KEY=your-polygon-key
YAHOO_FINANCE_API_KEY=optional-key

# Broker API Credentials (for trading execution)
ALPACA_API_KEY=your-alpaca-key
ALPACA_SECRET_KEY=your-alpaca-secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# WebSocket Configuration
WS_HOST=0.0.0.0
WS_PORT=8765

# Dashboard Configuration
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=True

# Security Settings
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-encryption-key

# Cloud Deployment (AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=investment-engine-data

# Monitoring
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=admin@example.com
